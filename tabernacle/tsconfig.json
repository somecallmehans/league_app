{
    "compilerOptions": {
      "types": ["vite/client"],
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "baseUrl": ".",
      "paths": { "@/*": ["src/*"] },
  
      "allowJs": true,
      "checkJs": false,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
  
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUncheckedIndexedAccess": true,
  
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx"
    ],
    "exclude": ["node_modules", "dist", "build"]
  }